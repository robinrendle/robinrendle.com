    <ol class="notes">
      {% for post in collections.notes | reverse | head(10) %}
        <li>
          <a href="{{ post.url }}">
            <h3>{{ post.data.title }}</h3>
            <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | shortDate }}</time>
