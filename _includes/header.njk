<style>
  .header {
    display: flex;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
    box-shadow: var(--shadow-1);
    backdrop-filter: blur(17px);
    padding: 5px 20px;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-width-content);
    height: 50px;
    left: 50%;
    transform: translate(-50%, 0%);
    background: var(--color-banner);
    border-bottom: 1px solid var(--color-border);

    @media screen and (min-width: 600px) {
      top: 50px;
    }

    span {
      display: none;

      @media screen and (min-width: 700px) {
        display: block;
      }
    }

    h1,
    h2 {
      color: var(--color-title);
      font-size: initial;
      line-height: initial;
      margin: initial;
      padding: initial;
      font-weight: initial;
      margin-right: auto;
    }

    nav {
      display: flex;
      gap: 5px;

      @media screen and (min-width: 600px) {
        gap: 10px;
      }

      a {
        color: var(--color-text);
        text-decoration: none;
      }
    }
  }

  .logo {
    color: var(--color-title);
    border: 1px solid transparent;
    justify-self: center;
    width: 100%;
    display: flex;

    svg {
      color: oklch(from var(--neutral) var(--900));
      width: 26px;

      @media screen and (min-width: 700px) {
        width: 26px;
      }
    }

    a {
      display: flex;
      justify-content: center;
      color: inherit;
      border-radius: 6px;
      display: flex;
      align-items: center;
      gap: 0.7rem;
      text-decoration: none;
      padding: 6px;

      &:focus,
      &:hover {
        background: rgba(0,0,0,0.1);
      }
    }
  }
</style>

