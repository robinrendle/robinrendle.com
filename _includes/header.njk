<style>
.header {
    background: var(--color-surface);
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9;
    box-shadow: var(--shadow-1);
    backdrop-filter: blur(17px);
    padding: 10px 15px;

    h1, h2 {
      color: var(--color-title);
      font-size: initial;
      line-height: initial;
      margin: initial;
      padding: initial;
      font-weight: initial;
      margin-right: auto;
    }
}

.logo {
    display: flex;
    gap: 0.6rem;
    align-items: center;
    text-decoration: none;
    color: inherit;
    border-radius: 50%;
    border: 1px solid transparent;

    a {
        color: inherit;
    }
  }
</style>

