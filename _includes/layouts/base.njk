<!-- If every website is a manifesto, then here’s mine. -->
<!DOCTYPE html>
<html lang="en" data-theme="light" class={{templateClass}}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, maximum-scale=1">
    <title>Robin Rendle — {{ title or metadata.title }}</title>
    <meta
      name="description"
      content="The website of Robin Rendle, a designer and writer from the UK."
/>
    <meta name="view-transition" content="same-origin"/>
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons3/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons3/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons3/favicon-16x16.png">
    <link rel="manifest" href="/images/favicons3/site.webmanifest">
    <link rel="mask-icon" href="/images/favicons3/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <link rel="alternate" type="application/rss+xml" title="Notes" href="/feed.xml">
    <link rel="alternate" type="application/rss+xml" title="The Cascade" href="/cascadefeed.xml">
    <link rel="alternate" type="application/rss+xml" title="Personal newsletter" href="/newsletterfeed.xml">
    <link rel="alternate" type="application/rss+xml" title="Essays" href="/essayfeed.xml">

    {%- css %}{% include "public/css/base.css" %}{% endcss %}

    <style>
      {% getBundle "css" %}
    </style>
  </head>
  <body>
    <svg class="arrow-link" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <g id="icon-arrow">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M6 0H14V8H12V3.41421L1.70711 13.7071L0.292892 12.2929L10.5858 2H6V0Z" fill="white"/>
        </g>
      </defs>
    </svg>
    <div class="nav">

      <a href="/" class="nav-logo">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="10" cy="10" r="9.5" stroke="white"/>
          <mask id="mask0_193_507" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="10" y="3" width="9" height="14">
            <rect x="10" y="3" width="9" height="14" fill="#D9D9D9"/>
          </mask>
          <g mask="url(#mask0_193_507)">
            <circle cx="10" cy="10" r="6.5" fill="white" stroke="white"/>
          </g>
        </svg>
      </a>
      <nav class="nav-list">
        <a href="/about" class="nav-list-item {% if '/' in page.url %}active{% endif %}">About</a>
        <a href="/notes" class="nav-list-item {% if '/notes' in page.url %}active{% endif %}">Notes</a>
        <a href="/essays" class="nav-list-item {% if '/essays' in page.url %}active{% endif %}">Essays</a>
        <a href="/newsletter" class="nav-list-item {% if '/the-cascade' in page.url %}active{% endif %}">Newsletter</a>
      </nav>
    </div>
    <main>
      {{ content | safe }}
      {% include "footer.njk" %}
    </main>
  </body>
</html>