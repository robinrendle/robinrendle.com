---
layout: layouts/base.njk
templateClass: tmpl-post
---

<c-grid>
  <c-window class="grid-column-12">
    <div class="window-title">
      <h1 id="heading">{{ title }}</h1>  
      <time class="window-title-meta" datetime="{{ page.date | htmlDateString }}">
        {{ page.date | fullDate }}
      </time>
    </div>
    <div class="window-content">
      <div class="article-wrapper">
        {{ content | safe }}
      </div>
    </div>
  </c-window>
</c-grid>