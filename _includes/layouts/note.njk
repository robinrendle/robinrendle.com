---
layout: layouts/base.njk
templateClass: tmpl-post
---

<c-page>
  <page-content>
    <div class="prose flow">
      <header class="title-header">
        <h1>{{ title }}</h1>
      </header>
      {{ content | safe }}
    </div>
    <page-footer>
      <div class="color-text-meta">
        <a class="button-text" href="/notes">Notes</a> / <time datetime="{{ page.date | htmlDateString }}">{{ page.date | fullDate }}</time>
      </div>
      <a class="button-text" href="mailto:robinjrendle@gmail.com">Contact</a>
    </page-footer>
  </page-content>
</c-page>
