<style>
  .content-footer {
    display: flex;
    position: sticky;
    bottom: 0;
    width: 100%;
    background: white;
    justify-content: space-between;
    align-items: center;
  }

  .content-footer-info {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      display: block;
    }
  }
</style>

<footer class="content-footer">
  <ul class="content-footer-info">
    {% set commitDate = page.inputPath | gitCommitDate %}
    {% if commitDate %}
    <li><time datetime="{{ commitDate | htmlDateString }}">{{ commitDate | shortDate }}</time></li>
    <li><time datetime="{{ commitDate | htmlDateString }}">{{ commitDate | time }}</time></li>
    {% else %}
    <li><time datetime="{{ page.date | htmlDateString }}">{{ page.date | shortDate }}</time></li>
    <li><time datetime="{{ page.date | htmlDateString }}">{{ page.date | time }}</time></li>
    {% endif %}
    <li><a href="https://github.com/robinrendle/robinrendle.com/commit/{{ page.inputPath | gitCommitHash }}" target="_blank" rel="noopener">{{ page.inputPath | gitCommitHash }}</a></li>
  </ul>
  <a href="mailto:robin@robinrendle.com">Email</a>
</footer>
