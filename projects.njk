    <style>
      @font-face {
        font-family: "Soehne";
        src: url("/fonts/soehne/soehne-buch.woff2") format("woff2");
        font-style: normal;
        font-weight: 400;
      }

      :root {
        --color-text: #111;
        --color-meta: #888;
        --font-size-text: 1.4rem;
        --pagination-height: 11px;
        --font-text: "Soehne", -apple-system, BlinkMacSystemFont, avenir next, avenir,
        segoe ui, helvetica neue, helvetica, Cantarell, Ubuntu, roboto, noto, arial,
        sans-serif;
        --font-size-title: 1rem;

        @media screen and (min-width: 600px) {
          --font-size-text: 1.8rem;
          --font-size-title: 1rem;
        }
      }

      html {
        -moz-text-size-adjust: none;
        -webkit-text-size-adjust: none;
        text-size-adjust: none;
        min-height: 100%;
      }

      body {
        font-size: 100%;
        padding: 0;
        margin: 0;
        overflow: hidden;
        min-height: 100%;
        font-family: var(--font-text);
        color: var(--color-text);
      }

      *,
      *:after,
      *:before {
        box-sizing: border-box;
      }

      carousel-wrapper {
        display: flex;
        flex-direction: row;
        position: relative;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-image: url('/images/me/robin-rendle.webp');
        height: calc(100dvh + 1px);
        overflow-x: scroll;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        overflow-behavior: maintain;
        scrollbar-width: none;
        scroll-timeline: --carousel x;
        timeline-scope: --carousel;
      }

      .fuzzy-bg:before {
        content: "";
        z-index: 0;
        height: 100%;
        width: 100%;
        position: absolute;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        backdrop-filter: blur(16px);
      }

      .card {
        display: flex;
      }

      .fade-in-fuzzy:before {
        view-timeline-axis: inline;
        view-timeline-name: --revealing-fuzzy;
        animation: linear fade-in-fuzzy both;
        animation-timeline: --revealing-fuzzy;
        animation-range: entry 50% cover 50%;
        will-change: opacity;
      }

      @keyframes fade-in-fuzzy {
        from {
          opacity: 0;
        } to {
          opacity: 1;
        }
      }

      carousel-item {
        scroll-snap-align: center;
        min-width: 100dvw;
        display: flex;
        position: relative;
        padding: 0 20px;
        will-change: scroll-position;
      }

      carousel-text {
        display: block;
        position: absolute;
        left: 20px;
        top: 30px;
        opacity: 1;
        max-width: 550px;
        padding-right: 20px;
        line-height: 1.2;

        @media screen and (min-width: 600px) {
          left: 40px;
          top: 40px;
          line-height: 1.2;
          max-width: 500px;
        }

        p {
          margin: 0;
          font-size: var(--font-size-text);
          color: rgba(255,255,255,0.62);
        }
        span {
          color: white;
        }
      }

      @keyframes fade-in-text {
        from {
          opacity: 1;
        } to {
          opacity: 0;
        }
      }

      @keyframes fade-in-rotate {
        from {
          transform: rotate(3deg);
        } to {
          transform: rotate(-3deg);
        }
      }

      carousel-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background: white;
        width: 392px;
        height: auto;
        aspect-ratio: 392 / 224;
        margin: auto;
        z-index: 999;
        position: relative;
        padding: 20px;
        box-shadow: 0px 8px 8px 0px rgba(0, 0, 0, 0.3);
        transform: rotate(-3deg);
        view-timeline-axis: inline;
        view-timeline-name: --revealing-card;
        animation: linear fade-in-rotate both;
        animation-timeline: --revealing-card;
        animation-range: entry 50% cover 50%;
        animation-delay: 1s;
        color: #333;
        font-size: 1.1rem;

        a {
          transition: all 0.3s linear;
          text-decoration: none;
          color: var(--color-meta);

          &:hover {
            color: #3677F0;
          }
        }

        span {
          display: block;
          color: var(--color-meta);
        }
      }

      carousel-img {
        display: block;
        max-width: 1000px;
        margin: auto;
        border-radius: 6px;
        overflow: hidden;
        opacity: 1;
        will-change: transform;
        box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
        view-timeline-axis: inline;
        view-timeline-name: --revealing-image;
        animation: linear fade-in-image both;
        animation-timeline: --revealing-image;
        animation-range: entry 25% cover 50%;

        img, video {
          display: block;
          margin: 0;
          max-width: 100%;

          @media screen and (max-height: 500px) {
            max-height: 70dvh;
          }
        }
      }

      @keyframes fade-in-image {
        from {
          transform: scale(0.8);
        } to {
          transform: scale(1);
        }
      }

      carousel-title-wrapper,
      pagination-controls {
        transition: opacity 0.3s linear;
      }

      pagination-list {
        position: fixed;
        bottom: 0;
        width: calc(100dvw - 20px);
        left: 10px;
        display: flex;
        gap: 4px;
        z-index: 3;

        @media screen and (min-width: 600px) {
          gap: 10px;
        }

        &:hover + carousel-title-wrapper,
        &:hover + carousel-title-wrapper + pagination-controls {
          opacity: 0;
        }

        a {
          display: flex;
          width: 100%;
          padding: 25px 0 10px 0;
          align-items: flex-end;
          position: relative;

          &:hover:before {
            background: rgba(255,255,255, 0.25);
          }

          &:before {
            content: "";
            border-radius: 50px;
            animation: 1s colorize-dot linear;
            animation-timeline: --carousel;
            animation-range: calc((var(--i) - 1) * 11.1111111111%) calc(var(--i) * 11.1111111111% + 1px);
            width: 100%;
            display: block;
            background: rgba(255,255,255, 0.1);
            height: var(--pagination-height);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255, 0.1);
            transition: all 0.3s linear;
          }

          &:nth-child(1) {
            --i: 1;
          }
          &:nth-child(2) {
            --i: 2;
          }
          &:nth-child(3) {
            --i: 3;
          }
          &:nth-child(4) {
            --i: 4;
          }
          &:nth-child(5) {
            --i: 5;
          }
          &:nth-child(6) {
            --i: 6;
          }
          &:nth-child(7) {
            --i: 7;
          }
          &:nth-child(8) {
            --i: 8;
          }
          &:nth-child(9) {
            --i: 9;
          }

          img {
            display: none;
            width: 270px;
            height: 150px;
            border: none;
            opacity: 0;
            transition: height 0.3s linear;
            transform: translate(0, -10px);
            border-radius: 6px;
            border: 1px inset rgba(255,255,255, 0.15);
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            z-index: 999;
            position: relative;
          }

          &:hover img {
            transform: translate(0, 0);
            display: block;
            position: absolute;
            left: 0;
            padding: 10px;
            background: rgba(255,255,255,0.1);
            z-index: 999;
            bottom: calc(var(--pagination-height) + 15px);
            object-fit: cover;
            backdrop-filter: blur(31px);
            border-radius: 3px;
            animation: 0.2s preview-appear linear;
            animation-fill-mode: forwards;
          }
        }
      }

      @keyframes preview-appear {
        from { opacity: 0; transform: translate(0,5px); }
        to { opacity: 1; transform: translate(0,-3px); }
      }

      @keyframes colorize-dot {
        0%, 100% {
          background: rgba(255,255,255, 0.4);
        }
      }

      @keyframes reveal-text {
        0%, 100% {
          opacity: 1;
        }
      }

      carousel-title {
        position: fixed;
        bottom: calc(var(--pagination-height) + 20px );
        left: 10px;
        opacity: 0;
        color: rgba(255,255,255,0.7);
        animation: reveal-text linear;
        animation-delay: 2s;
        animation-timeline: --carousel;
        animation-range: calc((var(--b) - 1) * 11.1111111111%) calc(var(--b) * 11.1111111111% + 1px);
        font-size: var(--font-size-title);

        &:nth-child(1) {
