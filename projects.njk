---
layout: layouts/base.njk
permalink: /projects/
title: Projects
templateClass: no-footer
---

<h1 class="hidden">Projects</h1>

<c-grid>
  {% for note in collections.projects | reverse %}
    <c-window class="window-project window-link grid-column-6">
      <a class="window-title window-title-link" href="{{ note.url | url }}">
        <h2>{{note.data.title}}</h2>
        <svg viewBox="0 0 14 14" class="window-title-icon">
          <use xlink:href="#icon-arrow"></use>
        </svg>
      </a>
      <div class="window-content">
        <a href="{{ note.url | url }}">
          {% for item in note.data.images | head(1) %}
            <img src="/images/projects/{{item}}" width="448" height="292" />
          {% endfor %}
        </a>
      </div>
    </c-window>
  {% endfor %}
</c-grid>

