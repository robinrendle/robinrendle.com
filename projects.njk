---
layout: layouts/base.njk
permalink: /projects/
title: Projects
templateClass: no-footer
---

<c-page>
  <page-content>
    <header class="title-header">
      <h1 class="text-title">Projects</h1>
    </header>
    <div class="prose flow">
      <ol class="notes">
        {% for post in collections.projects | reverse %}
          <li>
            <a href="{{ post.url }}">
              <h3>{{ post.data.title }}</h3>
              <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | yearDate }}</time>
            </a>
          </li>
        {% endfor %}
      </ol>
    </div>
  </page-content>
</c-page>
