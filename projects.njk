        }
        &:nth-child(3) {
          --b: 3;
        }
        &:nth-child(4) {
          --b: 4;
        }
        &:nth-child(5) {
          --b: 5;
        }
        &:nth-child(6) {
          --b: 6;
        }
        &:nth-child(7) {
          --b: 7;
        }
        &:nth-child(8) {
          --b: 8;
        }
        &:nth-child(9) {
          --b: 9;
        }
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }

      pagination-controls {
        display: flex;
        position: fixed;
        right: 10px;
        bottom: calc(var(--pagination-height) + 20px);
        gap: 8px;
        z-index: 9;

        pagination-left,
