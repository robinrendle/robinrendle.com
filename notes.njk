---
layout: layouts/base.njk
permalink: /notes/
title: Notes
template: archive
---

<ol class="notes">
  {% for post in collections.notes | reverse %}
    <li>
      <a class="note-link" href="{{ post.url }}">
        <h3>{{ post.data.title }}</h3>
        <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | shortDate }}</time>
      </a>
    </li>
  {% endfor %}
</ol>
