---
layout: layouts/base.njk
permalink: /notes/
title: Notes
---

<c-grid>
  <c-window class="window grid-column-8">
    <div class="window-title">
      <h2>Notes</h2>
    </div>
    <div class="window-content">
      <ol class="notes-list">
        {% for post in collections.notes | reverse %}
          <li>
            <a class="notes-list-item {{loop.index}}" href="{{ post.url }}">
              <div>
                <h3 class="notes-list-title">{{ post.data.title }}</h3>
                <p class="notes-list-extract">{{ post.data.extract }}</p>
              </div>
              <time class="font-code notes-list-extract notes-list-date" datetime="{{ post.data.date | htmlDateString }}">
                {{ post.data.date | shortDate }}
              </time>
            </a>
          </li>
        {% endfor %}
      </ol>
    </div>
  </c-window>
</c-grid>
