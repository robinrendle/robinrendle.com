---
layout: layouts/base.njk
title: Photos
template: photo
---

<style>
  .grid-photos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2px;

    picture {
      display: flex;
      height: 100%;
    }
  }
</style>

<section class="grid-photos">
  {% for folder in photoNav | reverse %}
    {% for photo in folder.photos %}
      <a class="gallery-item" href="{{ photo.url }}">
        <img class="gallery-img" src="{{ photo.src }}" alt="{{ photo.title }}" width="400" height="auto">
      </a>
    {% endfor %}
  {% endfor %}
</section>
