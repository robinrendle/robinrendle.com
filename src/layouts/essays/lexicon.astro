    * {
      -moz-box-sizing: border-box;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
    }

    html {
      overflow-y: scroll;
      min-height: 100%;
      -webkit-font-smoothing: antialiased;
      -webkit-text-size-adjust: 100%;
